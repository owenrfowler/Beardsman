// Reset
@import 'compass/reset';

// grid framework
@import 'grid';

// Compass mixins
@import 'ceaser-easing';

// fonts
@import '_fonts/_fonts';

// Variables
$divider: #e1e1df;



body {
  margin: 40px 0 0;
  width: 100%;
  background: #fff;
  font-family: 'source_code_proregular';
  color: #272727;
}

#canvas {
  display: block;
  overflow: hidden;
  margin: 0 auto;
  width: 1160px;

  header {
    overflow: hidden;
    @include gridle(12);

    #header-top {
      overflow: hidden;
      padding: 0 0 35px;
      border-bottom: 1px solid #e3e3e3;

      h1#logo {
        float: left;
        font: normal 36px 'neuzeit_groteskregular';
        color: #272727;
      }
    }

    #header-bottom {
      overflow: hidden;
      padding: 20px 0;

      #nav {
        float: left;
        // @include gridle(8);
        // @include gridle-no-gutter;
        list-style: none;
        
        li {
          display: inline-block;
          margin: 0 40px 0 0;

          a {
            color: #000;
            font: normal 14px 'oswaldbook';
            text-transform: uppercase;
            text-decoration: none;
            letter-spacing: 2px;
            &:active {
              color: #929292;
            }
          }
        }
      }
      #ship-rates {
        overflow: hidden;
        float: right;

        img {
          display: inline-block;
          float: left;
        }
        p {
          display: inline-block;
          margin: 4px 0 0 10px;
          font-size: 14px;
          
          span {
            font-weight: 700;
          }
        }
      }
    }
  }

  #hero {
    @include gridle(12);
    overflow: hidden;
    margin: 0 0 40px;
    
    #carousel {
      background-color: #2d2d2d;

      #carousel-text {
        // padding: 100px 0 0 40px;
        h1 {
          font: normal 60px 'oswaldbook';
          color: #fff;
          text-transform: uppercase;
        }
        p {
          font: 300 24px/32px 'oswaldbook';
          color: #7f7f7f;
        }  
      }
      
    }
  }

  .product-grid {
    @include gridle(12);
    @include gridle_parent();
    overflow: hidden;
  }
  .product {
    @include gridle(3);
    display: block;
    margin: 0 0 46px;
    height: 300px;
    letter-spacing: 1px;

    img {
      margin: 0 0 12px;
    }
    p {
      &.product-tag {
        margin: 0 0 3px;
        font: normal 14px 'oswaldbook';
        text-transform: uppercase;
      }
      &.list-price {
        font: 300 14px/24px 'source_code_proregular';
      }
    }
  }

  .divide {
    @include gridle(12);
    .content {
      border-top: 1px solid #e1e1df;
      line-height: 1px;  
    }
  }

  footer {
    overflow: hidden;
    @include gridle(12);
    @include gridle_parent();
    padding: 46px 0;

      h3 {
        margin: 0 0 14px;
        font: normal 14px 'oswaldbook';
        text-transform: uppercase;
        letter-spacing: 2px;
      }
      .footer-nav,
      .connect {
        @include gridle(3);

        ul {
          margin: -1px 0 0;
           li {
            font-size: 14px;
            line-height: 24px;

            a {
              color: #272727;
              text-decoration: none;
            }
          }
        }
      }
      .footer-nav ul li {
        font-size: 13px;
      }
      .connect {

        ul li {
          overflow: hidden;

          &::before {
            float: left;
            padding: 1px 10px 0 0;
            color: #8f8f8f;
            font-size: 13px;
            font-family: "SSSocialRegular";
            font-style: normal;
            font-weight: normal;
            text-decoration: none;
            text-rendering: optimizeLegibility;
            white-space: nowrap;
            /*-webkit-font-feature-settings: "liga"; Currently broken in Chrome >= v22. Falls back to text-rendering. Safari is unaffected. */
            -moz-font-feature-settings: "liga=1";
            -moz-font-feature-settings: "liga";
            -ms-font-feature-settings: "liga" 1;
            -o-font-feature-settings: "liga";
            font-feature-settings: "liga";
            -webkit-font-smoothing: antialiased;

            a {
              float: left;
            }
          }
          &.fb::before {
            content: 'facebook';
          }
          &.pin::before {
            content: 'pinterest';
          }
          &.twit::before {
            content: 'twitter';
          }

        }
      }

      #mail-list {
        @include gridle(6);

        p {
          font-size: 13px;
          line-height: 22px;
        }
        form {
          overflow: hidden;
          margin: 18px 0 0;

          input[type=text]{
            float: left;
            padding: 0 0 0 10px;
            width: 280px;
            height: 40px;
            border: 1px solid $divider;
            border-radius: 2px;
            font: 14px/24px 'source_code_proregular';
            outline: none;
            box-sizing: border-box;
            &:focus {
              border: 1px solid #272727;
            }
          }
          button {
            margin: 0 0 0 10px;
            width: 130px;
            height: 40px;
            background-color: #272727;
            border: 1px solid #272727;
            color: #fff;
            font: normal 13px 'oswaldbook';
            text-align: center;
            text-transform: uppercase;
            cursor: pointer;
            box-sizing: border-box;
            transition: all 0.3s ease;

            &:hover {
              background-color: #fff;
              color: #272727;
            }
          }
        }
      }
    
  }
  #foot-notes {
    @include gridle(12);
    
    display: block;
    margin: 39px 0 40px;
    p {
      float: left;
      font-size: 14px;
      line-height: 24px;
    }
    img {
      float: right;
    }
  }
}

